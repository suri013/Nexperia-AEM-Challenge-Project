<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Advanced Blog List Dialog">
  <content jcr:primaryType="nt:unstructured"
           sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
      <column jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
          <pageSize jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    fieldLabel="Page Size" name="./pageSize" value="10" min="1" max="50"/>
          <sortBy jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/form/select"
                  fieldLabel="Default Sort By" name="./sortBy">
            <items jcr:primaryType="nt:unstructured">
              <date jcr:primaryType="nt:unstructured" text="Date" value="date"/>
              <author jcr:primaryType="nt:unstructured" text="Author" value="author"/>
              <category jcr:primaryType="nt:unstructured" text="Category" value="category"/>
              <title jcr:primaryType="nt:unstructured" text="Title" value="title"/>
            </items>
          </sortBy>
          <searchPlaceholder jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
              fieldLabel="Search Placeholder" name="./searchPlaceholder" value="Search posts..."/>
        </items>
      </column>
    </items>
  </content>
</jcr:root>